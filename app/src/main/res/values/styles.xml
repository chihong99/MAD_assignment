<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Edit Text View margin -->
    <style name="login_edit_text">
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">35dp</item>
    </style>

    <!-- Button style in Seller Theme Park -->
    <style name="SellerThemeParkButton">
        <item name="android:textColor">@color/colorBar</item>
        <item name="android:background">@color/textColor</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
